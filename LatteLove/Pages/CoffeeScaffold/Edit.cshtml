@page
@model LatteLove.Pages.CoffeeScaffold.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Coffee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Coffee.Id" />
            <div class="form-group">
                <label asp-for="Coffee.Price" class="control-label"></label>
                <input asp-for="Coffee.Price" class="form-control" />
                <span asp-validation-for="Coffee.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coffee.Name" class="control-label"></label>
                <input asp-for="Coffee.Name" class="form-control" />
                <span asp-validation-for="Coffee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coffee.Location" class="control-label"></label>
                <input asp-for="Coffee.Location" class="form-control" />
                <span asp-validation-for="Coffee.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coffee.Coffees" class="control-label"></label>
                <select asp-for="Coffee.Coffees" class="form-control"></select>
                <span asp-validation-for="Coffee.Coffees" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
